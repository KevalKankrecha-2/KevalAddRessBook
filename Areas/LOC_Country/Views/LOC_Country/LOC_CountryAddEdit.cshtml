@model KevalThemeAddressBook.Areas.LOC_Country.Models.LOC_CountryModel
@{
    ViewData["Title"] = "Country Add Edit";
}

<div class="pagetitle">
    <h1>AddressBook</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Index">Country</a></li>
            <li class="breadcrumb-item active">Add Edit Form</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<div class="row">
    <div class="col-md-12">
        <form method="post" class="row g-3"  asp-controller="LOC_Country" asp-action="Save">
            @Html.HiddenFor(x => x.CountryID)
            <div class="form-group col-12">
                <label for="inputNanme4" class="form-label">Country Name</label>
                <input type="text" placeholder="Enter CountryName" class="form-control" asp-for="CountryName" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label for="inputNanme4" class="form-label">Country Code</label>
                <input type="text" placeholder="Enter Country Code" class="form-control" asp-for="CountryCode" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <div class="d-inline">
                <input type="submit" class="btn btn-success" value="Save" />
                <button class="btn btn-danger"><a class="text-white cacelbutton" asp-controller="LOC_Country" asp-action="Cancel">Cancel</a></button>
            </div>

        </form>
    </div>
</div>

@section Scripts{}